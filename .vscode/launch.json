{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Nest Framework",
			"args": [
				"${workspaceFolder}/src/main.ts"
			],
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"sourceMaps": true,
			"envFile": "${workspaceFolder}/.env",
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"protocol": "inspector"
		},
		{
			"name": "Debug Jest Tests",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceRoot}/node_modules/jest/bin/jest.js",
				"--config",
				"${workspaceRoot}/jest-e2e.json",
				"--runInBand",
				"--coverage",
				"false",
				"partida.e2e-spec"
			],
			"console": "integratedTerminal"
		}
	]
}